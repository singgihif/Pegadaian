@model WebPegadaian.Models.Installment

@{
    ViewBag.Title = "Create";
}

@Html.AntiForgeryToken()

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Create Installment</h1>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-10">
    <div class="card">
        <div class="card-header">
            <strong>Form</strong> Create Installment
        </div>
        <div class="card-body card-block">
            <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                <div class="row form-group">
                    @Html.LabelFor(model => model.Installment_Date, htmlAttributes: new { @class = "control-label col-md-3" })
                    
                    @Html.EditorFor(model => model.Installment_Date, new { htmlAttributes = new { @class = "form-control col-md-3" } })
                    @Html.ValidationMessageFor(model => model.Installment_Date, "", new { @class = "text-danger" })
                </div>
                <div class="row form-group">
                    @Html.LabelFor(model => model.Due_Date, htmlAttributes: new { @class = "control-label col-md-3" })

                        @Html.EditorFor(model => model.Due_Date, new { htmlAttributes = new { @class = "form-control col-md-3" } })
                        @Html.ValidationMessageFor(model => model.Due_Date, "", new { @class = "text-danger" })
                </div>
                
                <div class="row form-group">
                    @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-3" })
                    
                        @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control col-md-3" } })
                        @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                </div>

                <div class="row form-group">
                    @Html.LabelFor(model => model.Installment_Amount, htmlAttributes: new { @class = "control-label col-md-3" })

                        @Html.EditorFor(model => model.Installment_Amount, new { htmlAttributes = new { @class = "form-control col-md-3" } })
                        @Html.ValidationMessageFor(model => model.Installment_Amount, "", new { @class = "text-danger" })
                </div>
                
                <div class="row form-group">
                    @Html.LabelFor(model => model.Transaction_Id, "Transaction_Id", htmlAttributes: new { @class = "control-label col-md-3" })

                        @Html.DropDownList("Transaction_Id", null, htmlAttributes: new { @class = "form-control col-md-3" })
                        @Html.ValidationMessageFor(model => model.Transaction_Id, "", new { @class = "text-danger" })
                    
                </div>
                
            </form>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="fa fa-dot-circle-o"></i> Submit
            </button>
            <button type="reset" class="btn btn-danger btn-sm">
                <i class="fa fa-ban"></i> Reset
            </button>
        </div>
    </div>
</div>

